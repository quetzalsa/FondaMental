<div id="jean_madry" class="sidenav" style="z-index: 1000;">
    <a href="javascript:void(0)" class="closebtn" onclick="closeJean()">&times;</a>
    <div class="galeriasidedj">
        <%= render 'jean_madry'%>
    </div>
</div>

<div id="lisa_cropp" class="sidenav" style="z-index: 1000;">
    <a href="javascript:void(0)" class="closebtn" onclick="closeLisa()">&times;</a>
    <div class="galeriasidedj">
        <%= render 'lisa_cropp'%>
    </div>
</div>

