        background-color: black;
        width:100%;
        grid-column: 1 ;
        grid-row: 1;
        
        h1 {
            font-family: 'Rubik Mono One', sans-serif;
            width: 100%;
            font-size: 3em;
            color: #cccccc;
            padding: 50px 0px;
            text-align: center;
            grid-column: 1 ;
            grid-row: 1;
        }
    }

    

    .gal_tit_lacour {
        height: 100%;
        background-color: black;
        width: 100%;
        grid-column: 1 ;
        grid-row: 1;
        
        
