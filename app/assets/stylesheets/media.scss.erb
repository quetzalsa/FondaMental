            font-family: 'Rubik Mono One', sans-serif;
            width:100%;
            font-size: 6em;
            color: #cccccc;
            padding: 3px 0px;
            text-align: center;
            grid-column: 1 ;
            grid-row: 1;
        }
    }

    .galeria {
        padding: 50px 0;
        width: 80%;
        margin: auto;
        display: grid;
        grid-template-columns: 1fr;
        grid-gap: 30px;
        align-items: center;
        justify-items: center;
        
    }
}

.galeria img {
    width: 100%;
}

.galeria_foto {
