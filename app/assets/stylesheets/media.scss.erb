
@media (min-width: 960px) { 

    .info {
        font-family: 'Work Sans', sans-serif;
        grid-column: 1 / 3;
        grid-row: 1;
        display: grid;
        grid-gap: 1em;
        justify-items: center;
    }

    

    button.accordion {
        background-color: rgb(43, 43, 43);
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        text-align: left;
        border: none;
        outline: none;
        transition: 0.4s;
    }

    button.accordion.active, button.accordion:hover {
        background-color: #ccc;
    }

    button.accordion.active i, button.accordion:hover i {
        color: black;
    }

    .info .panel {
        padding: 0 18px;
        
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
        text-align: justify;
        width: 60%;
        
        background-color: #ccc;
        
    }

    


    .galeria_princ {
        width: 90%;
        margin: auto;
        padding-bottom: 50px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 50px;
        justify-content: center;
        align-content: center;
    }

    .galeria {
        padding: 30px 0px 70px 0px;
        width: 90%;
        margin: auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 30px;
        align-items: center;
        
    }

    .galeria iframe {
        grid-column: 1 / 3;
        grid-row: 2;
        min-height: 500px;
        width: 100%;
    }

    #imafreefall {
        background-image: url(<%= asset_path "free_fall/free_fall13.jpg" %>);
        height: 60vh;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        align-items: center;
        justify-items: center;
        background-attachment: fixed;
        background-position: bottom;
        background-repeat: no-repeat;
        background-size: cover;
    }

    

     #imalacour {
        background-image: url(<%= asset_path "la_cour/la_cour04.jpg" %>);
        height: 60vh;
        background-attachment: fixed;
        background-position: bottom;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .gal_tit {
        height: 30vh;
        background-color: black;
        margin-top: -65px;
        
        h1 {
            font-family: 'Rubik Mono One', sans-serif;
            font-size: 6em;
            color: #cccccc;
            padding: 60px 0px;
            text-align: center;
            
        }
    }

    .gal_tit_lacour {
        height: 30vh;
        background-color: black;
        margin-top: -65px;
        
        h1 {
            font-family: 'Rubik Mono One', sans-serif;
            font-size: 5em;
            color: #cccccc;
            padding: 3px 0px;
            text-align: center;
            
        }
    }
}

@media (max-width: 960px) { 

