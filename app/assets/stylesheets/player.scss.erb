#audioplayer{
  grid-area: player;
  self-align: center;

	width: 100%;

  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr;
  grid-template-areas: "timeline button";
  align-content: center;
}
/* Play/Pause Button */
#pButton{
    display: block;
	height:60px;
	width: 60px;
	border: none;
	background-size: 50% 50%;
	background-repeat: no-repeat;
	background-position: center;
	outline:none;
  cursor: pointer;
  grid-area: button;
}

