/*Classes for play/pause button background*/
.play{
    background-color: rgba(171, 139, 97, 0);
    background-image: url(<%= asset_path "play.png" %>);
    position: relative;
    top: -8px;
}





@-webkit-keyframes fa-spin {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(359deg);
    transform: rotate(359deg);
  }
}
.pause{
    background-color: rgba(171, 139, 97, 0);
    background-image: url(<%= asset_path "pause.png" %>);
    position: relative;
    top: -8px;
    animation: fa-spin 2s infinite linear;
}

#timeline{

	height: 3px;
	background: rgba(172, 172, 172, 0.3);
	margin-top: 20px;
  margin-bottom: 20px;

  grid-area: timeline;
/*	border-radius: 15px;*/

}
/*Grabable Playhead*/
#playhead{
	cursor: pointer;
	width: 3px;
	height: 25px;
	margin-top: -11px;
  margin-right: -14px;

	background: #f0f0f0;
}
